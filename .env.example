# TaskWeaver Environment Variables
# Copy to ~/.config/taskweaver/.env or ./.env (project-local)

# Set API key based on your model provider:

# OpenAI (gpt-4o, gpt-4o-mini, etc.)
OPENAI_API_KEY=sk-...

# OpenRouter (multi-provider gateway)
# Use model format: openrouter:provider/model
OPENROUTER_API_KEY=sk-or-...

# Anthropic (claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Google (gemini models)
GOOGLE_API_KEY=...

# Logging (optional)
LOGURU_LEVEL=WARNING
