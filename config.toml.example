# TaskWeaver Configuration
# Copy this file to ~/.config/taskweaver/config.toml and customize
#
# Simple, flat configuration - no nested sections!

# LLM model name
# Examples: "gpt-4o-mini", "gpt-4", "claude-3-5-sonnet-20241022"
model = "gpt-4o-mini"

# API endpoint URL
# OpenAI: "https://api.openai.com/v1"
# Anthropic: "https://api.anthropic.com/v1"
# Local: "http://localhost:1234/v1"
# OpenRouter: https://openrouter.ai/api/v1
# Custom: Any OpenAI-compatible endpoint
api_endpoint = "https://api.openai.com/v1"

# Automatically decompose complex tasks into subtasks
auto_decompose = true
